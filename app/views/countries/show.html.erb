<% if notice %>
  <div class="alert alert-info">
    <p id="notice">
      <%= notice %>
    </p>
  </div>
<% end %>
<br/>

<p>
  <strong>Name:</strong>
  <%= @country.name %>
</p>

<p>
  <strong>Flag:</strong>
  <%= image_tag @country.flag_url.to_s %>
</p>

<%= link_to 'Edit', edit_country_path(@country) %> |
