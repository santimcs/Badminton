<% content_for :title, 'Players' %>

<div class ="page-header text-center" > 
  <%= link_to 'New Player', new_player_path,
  :class => "btn btn-success pull-right"  %>
  <h1>Players</h1>
</div>

<table id="players" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Jersey</th>
      <th>Image</th>
      <th>Country</th>
      <th>Flag</th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.first_name %></td>
        <td><%= player.last_name %></td>
        <td><%= player.jersey_name %></td>

        <td><%= image_tag player.image_url.to_s, height: '60', width: '70' %></td>        
        <td><%= player.country.name %></td>
        <td><%= image_tag player.country.flag_url.to_s %></td>
       <!-- start of buttons -->
        <td>
          <%= link_to 'Show', player, :class => " btn btn-success btn-xs active"  %></br>
          <%= link_to 'Edit', edit_player_path(player), 
                :class => " btn btn-warning btn-xs active" %></br>
          <%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' },     :class => " btn btn-danger btn-xs active" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_player_path %>
