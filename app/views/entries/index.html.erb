<% content_for :title, 'Entries' %>

<div class ="page-header text-center" > 
  <%= link_to 'New Entry', new_entry_path,
  :class => "btn btn-success pull-right"  %>
  <h1>Entries</h1>
</div>

<table id="entries" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Tournament</th>
      <th>Event</th>
      <th>Team</th>
      <th>Rank</th>    
      <th></th>
      <th></th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <% tournament = Tournament.find(entry.tournament_id) %>
        <td><%= tournament.name %></td>
        <td><%= entry.team.event.abbr %></td>
        <td><%= entry.team.team_name %></td>
        <td><%= entry.rank %></td>
        <td><%= image_tag entry.team.player1.image_url.to_s, height: '60', width: '70' %></td>
        <td><%= image_tag entry.team.player1.country.flag_url.to_s %></td>
        <td>
          <%= link_to 'Show', entry %></br>
          <%= link_to 'Edit', edit_entry_path(entry) %></br>
          <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path %>
