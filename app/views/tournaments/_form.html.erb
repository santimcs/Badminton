<%= form_for(tournament) do |f| %>
  <% if tournament.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tournament.errors.count, "error") %> prohibited this tournament from being saved:</h2>

      <ul>
      <% tournament.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :fm_date %>
    <%= f.date_select :fm_date, order: [:day, :month, :year] %>
  </div>

  <div class="field">
    <%= f.label :to_date %>
    <%= f.date_select :to_date, order: [:day, :month, :year] %>
  </div>

  <div class="field">
    <%= f.label :country_id %>
    <%= f.collection_select :country_id, Country.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :chosen %><br>
    <%= f.check_box :chosen %>
  </div>

  <div class="field">
    <%= f.label :category_id  %>
    <%= f.collection_select :category_id,
        Category.all, :id, :name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
