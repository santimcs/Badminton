<% content_for :title, 'Results' %>

<div class ="page-header text-center" >
  <%= link_to 'New Result', new_player_path,
  :class => "btn btn-success pull-right"  %>
  <h1><%= @results.first.match.tournament.name %></h1>
</div>

  <table id="results" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Round</th>
      <th>Event</th>

      <th>Player 1</th>
      <th></th>
      <th>Score</th>
      <th>Player 2</th>
      <th></th>
      <th>Action</th>

    </tr>
  </thead>

  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.match.date.strftime("%m-%d") %></td>
        <td><%= result.match.round.name %></td>
        <td><%= result.match.team1.event.name %></td>
        <td><%= result.match.team1.team_name %></td>
        <td><%= image_tag result.match.team1.player1.image_url.to_s, height: '60', width: '70' %></td>
        <td><%= result.game %></td>
        <td><%= result.match.team2.team_name %></td>
        <td><%= image_tag result.match.team2.player1.image_url.to_s, height: '60', width: '70' %></td>

        <td>
          <%= link_to 'Show', result %></br>
          <%= link_to 'Edit', edit_result_path(result) %></br>
          <%= link_to 'Destroy', result, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Result', new_result_path %>
